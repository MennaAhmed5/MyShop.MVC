@model ShoppingCartVM



<form  method="post">
	<br />
	<div class="container m-4">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0">
				<div class="row">
					 <div class="col-6 pt-2">
						 <i class="fas fa-shopping-cart"></i>&nbsp;
						 Shopping Cart
                    </div>
					<div class="col-6 text-end">
						 <a asp-area="Customer" asp-action="Index" class="btn btn-outline-light btn-sm">Continue Shopping</a>
					</div>
				</div>
			</div>
		   <div class="cart-body">
				@if (Model.CartsList.Count() < 1)
				{
					<h4>There is no item in your cart</h4>
				}
				else
				{
					foreach(var item in Model.CartsList)
					{
						<div class="row"> 
							<div class="d-none d-lg-block col-lg-1 text-center py-2">
								<img src="~/@item.Product.Img" class="rounded" width="100%"/>
						    </div>
							<div class="col-12 col-lg-6 pt-md-3">
								<h5><strong>@item.Product.Name</strong></h5>
								<p><small>@Html.Raw(item.Product.Description)</small></p>
 							</div>
							<div class="col-12 col-lg-5 text-center row">
								 <div class="col-4 text-md-right pt-4">
									 <h6>
										 <strong>
											 @item.Product.Price.ToString("c")
											 <span class="text-muted">&nbsp; x &nbsp; </span>@item.Count
										 </strong>
                                     </h6>
							     </div>

								<div class="col-6 col-sm-4 col-lg-6 pt-2">
									 <div class="w-75 btn-group" role="group">
										 <a asp-action="Plus" asp-route-cartId="@item.Id" class="btn btn-dark">
								         <i class="bi bi-plus-square"></i>
										</a> &nbsp;
										<a asp-action="Minus" asp-route-cartId="@item.Id" class="btn btn-dark">
											<i class="bi bi-dash-square"></i>
										</a>  
									 </div>
								</div>
								<div class="col-6 col-sm-4 col-lg-2 text-right pt-2">
									<a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-danger">
										<i class="bi bi-trash-fill"></i>
									</a>
								</div>
							</div>
						</div>

						<hr />
					}

					<div class="row m-2">
						<div class="col-6 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
							 <ul class="list-group">
                                  <li class="list-group-item d-flex justify-content-between bg-light">  
									  <span class="text-dark">ToTal (USD)</span>
									  <strong class="text-dark">@Model.TotalCarts.ToString("c")</strong>
								  </li>
                            </ul>
						</div>
					</div>
				}
			</div>
			@if (Model.CartsList.Count() >= 1)
			{
				<div class="cart-footer m-2">
					<div class="cart-footer row">
						<div class="col-sm-12  col-lg-4  col-md-6 offset-lg-8 offset-lg-6 pr-4">
						  <a asp-action="Summary" class="btn btn-primary form-control">Summary</a>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
	<br />
</form>

