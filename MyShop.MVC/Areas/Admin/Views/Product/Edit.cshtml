@model ProductVM

@{
    ViewBag.PageTitle = "Product Managment";
    ViewBag.CartTitle = "Edit Product";

 }
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Product.Id" />
            <input type="hidden" asp-for="Product.Img" />

            <div class="form-group  mb-3">
                <label asp-for="Product.Name"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Product.Name"></span>
            </div>
            <div class="form-group  mb-3">
                <label asp-for="Product.Description"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span class="text-danger" asp-validation-for="Product.Description"></span>
            </div>
            <div class="form-group  mb-3">
                <label asp-for="Product.Price"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span class="text-danger" asp-validation-for="Product.Price"></span>
            </div>
            <div class="form-group  mb-3">
                <label asp-for="Product.Img"></label>
                <input type="file" name="file" id="fileImage" class="form-control" />
                <span class="text-danger" asp-validation-for="Product.Img"></span>
            </div>

            <div class="form-group  mb-3">
                <label asp-for="Product.CategoryId"></label>
                <select class="form-control" asp-for="Product.CategoryId" asp-items="Model.CategoryList">
                    <option disabled selected>---- Select Category ----</option>
                </select>
                <span class="text-danger" asp-validation-for="Product.CategoryId"></span>
            </div>
            <div class="form-group  mb-3">
                <button class="btn btn-success" type="submit">Edit</button>
                <a asp-action="Index" asp-controller="Product" class="btn btn-warning">Back To Index</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="container">
            <img  src="~/@Model.Product.Img" width="300" height="300"/>
        </div>
    </div>
</div>
@section scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}

