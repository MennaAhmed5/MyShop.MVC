@model IEnumerable<Category>

@{
    ViewBag.PageTitle = "Category Managment";
    ViewBag.CartTitle = "view Categories";

    
}

 

 
<a class="btn btn-primary" href="/Category/Create">Create</a>
<br />
<br />
<br />

<table class="table table-hover" width="100%">
    <tr>
        <td>Name</td>
        <td>Description</td>
        <td>Date Created</td>
        <td>Actions</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>
            <td>
                <a class="btn btn-success" href="/Category/Edit/@item.Id">Edit</a> 
             <a class="btn btn-danger" href="/Category/Delete/@item.Id">Delete</a>
         </td>

        </tr>

    }
</table>
